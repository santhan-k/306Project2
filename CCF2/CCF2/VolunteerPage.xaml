<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:s="http://schemas.microsoft.com/surface/2008" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" 
      x:Class="CCF2.VolunteerPage" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      mc:Ignorable="d"
      TouchDown="Volunteer_Touch_TouchDown" TouchUp="Volunteer_Touch_TouchUp" TouchMove="Volunteer_Touch_TouchMove"
      Title="VolunteerPage">
    
    <Page.Background>
        <ImageBrush ImageSource="Resources/images/Common/background.png" />
    </Page.Background>


    <Grid>
        <Viewbox Margin="283.493,247.186,282.846,151.814" Stretch="Fill">
            <Grid Height="600.507" Width="1198">
                <GridSplitter HorizontalAlignment="Stretch" Margin="595.67,-626.697,601,24.593" RenderTransformOrigin="0.5,0.5">
                    <GridSplitter.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-89.971"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </GridSplitter.RenderTransform>
                </GridSplitter>
                <Label Content="Volunteer" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Margin="20" Foreground="Black" />
                <TextBlock x:Name="pageTitle"  VerticalAlignment="Center" IsHitTestVisible="false" FontSize="48" Margin="50,0,0,0" />
                <TextBlock Margin="53,94,390,7" TextWrapping="Wrap" FontSize="26.667" Height="505" Foreground="White" Width="750"><Run Language="en-nz" Text="Child Cancer Foundation could not carry out the work we do in the community without the help of our volunteers."/><LineBreak/><Run Language="en-nz"/><LineBreak/><Run FontWeight="Bold" Language="en-nz" Text="What is volunteering?"/><LineBreak/><Run Language="en-nz" Text="Volunteering provides a wonderful opportunity for people to meet, contribute and support a common cause. Volunteers help us to achieve our purpose by offering their time, skills and valuable advice."/><LineBreak/><Run Language="en-nz"/><LineBreak/><Run FontWeight="Bold" Language="en-nz" Text="What do CCF volunteers do? "/><LineBreak/><Run Language="en-nz" Text="Our volunteers provide a range of services and support including participating in CCF Branch activities, helping out at the Family Places, working alongside our staff and helping our fundraising team during events."/></TextBlock>
                <Image HorizontalAlignment="Right" Margin="0,119.843,73.603,230.664" Source="Resources/qr/Volunteer.png" Stretch="Fill" Width="250" Height="250"/>
                <TextBlock HorizontalAlignment="Right" Height="60" Margin="0,0,51.103,150.269" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="250" FontSize="17" FontWeight="Bold" Foreground="White"><Run Language="en-nz" Text="          Join as a volunteer"/></TextBlock>
                <Image HorizontalAlignment="Right" Margin="0,107.311,51.103,243.195" Source="Resources/qr/volunteerQR.png" Stretch="Fill" Width="250" Height="250"/>
                <!--Grid containing the 8 links to sub pages-->
            </Grid>


        </Viewbox>
        <!--Code for the scrolling news feed-->
        <TextBlock FontSize="22" x:Name="txtScrolling" Text="Scrolling text thingy" Margin="440,176,152,0" Width="1328" Height="32" VerticalAlignment="Top" Visibility="Hidden">
            <TextBlock.RenderTransform>
              <TranslateTransform x:Name="translate" />
                </TextBlock.RenderTransform>
                  <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation
                                    From="1100" To="0"
                                    Storyboard.TargetName="translate"
                                    Storyboard.TargetProperty="X"
                                    Duration="0:0:9" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
        </TextBlock>
        <!--<Image Margin="283.493,22,0,0" Source="Resources/CCF-logo2_200.png" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="200"/>-->

        <!--Home button/logo-->
        <Button Height="Auto" Width="200" Margin="-800.493,-700,0,0" Click="Home_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="Resources/images/Common/CCF-logo2_200.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!--Back button-->
        <s:SurfaceButton
                Margin="195.693,59,0,0" Padding="0"
                BorderThickness="0"
                Click="Back_Click" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Background="{x:Null}">
            <Image Height="60"
                    Width="60"
                    Source="Resources/images/Common/back_button.png">
                <Image.Effect>
                    <ee:BloomEffect BloomIntensity="2" BaseSaturation="0" BaseIntensity="1" BloomSaturation="2" Threshold="0.25"/>
                </Image.Effect>
            </Image>
        </s:SurfaceButton>
        <!-- Finger swipe image -->
        <Image Source="Resources/images/Common/finger_swipe2.png" HorizontalAlignment="Right" Height="100" VerticalAlignment="Top" Width="100" Stretch="Fill" Margin="0,35,283,0"/>
    </Grid>
</Page>
