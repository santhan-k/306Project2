<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:s="http://schemas.microsoft.com/surface/2008" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ee="http://schemas.microsoft.com/expression/2010/effects" 
      x:Class="CCF2.HowYouCanHelp" 
      d:DesignHeight="1080" d:DesignWidth="1920"

	mc:Ignorable="d"

	Title="HowYouCanHelp">
    <Page.Background>
        <ImageBrush ImageSource="Resources/background.png" />
    </Page.Background>
    <Grid>
        <Viewbox Margin="283.493,247.186,282.846,151.814" Stretch="Fill">
            <Grid Height="600.507" Width="1197.661">
                <GridSplitter HorizontalAlignment="Stretch" Margin="595.67,-626.697,601,24.593" RenderTransformOrigin="0.5,0.5">
                    <GridSplitter.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-89.971"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </GridSplitter.RenderTransform>
                </GridSplitter>
                <Label Content="How You Can Help" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="48" Margin="20" Foreground="Black" />
                <!--Grid containing the 8 links to sub pages-->
                <Grid Margin="83.018,117.638,173.046,56.958">
                    <s:SurfaceButton Content="Beads Of Courage®" Height="75" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="350" FontSize="32" Foreground="White" Click="BeadsOfCourage_Click" Background="{x:Null}" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Sponsors" Margin="0,117.72,0,0" HorizontalAlignment="Left" Width="350" Height="75" VerticalAlignment="Top" FontSize="32" Foreground="White" Click="Sponsors_Click" Background="{x:Null}" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Donate" Margin="0,0,0,116.398" HorizontalAlignment="Left" Width="350" Height="75" VerticalAlignment="Bottom" FontSize="32" Foreground="White" Click="Donate_Click" Background="{x:Null}" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Fundraise" Margin="0" HorizontalAlignment="Left" Width="350" Height="75" VerticalAlignment="Bottom" FontSize="32" Foreground="White" Click="Fundraise_Click" Background="{x:Null}" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Make A Gift" Height="75" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="350" FontSize="32" Foreground="White" Click="MakeAGift_Click" Background="{x:Null}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Our Campaigns" Margin="0,117.72,0,0" HorizontalAlignment="Right" Width="350" Height="75" VerticalAlignment="Top" FontSize="32" Foreground="White" Click="OurCampaigns_Click" Background="{x:Null}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Volunteer" Margin="0,0,0,116.398" Height="75" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="350" FontSize="32" Foreground="White" Click="Volunteer_Click" Background="{x:Null}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
                    <s:SurfaceButton Content="Schools" Margin="0" Height="75" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="350" FontSize="32" Foreground="White" Click="Schools_Click" Background="{x:Null}" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" />
                </Grid>

            </Grid>
        </Viewbox>
        <!--Code for the scrolling news feed-->
        <TextBlock FontSize="22" x:Name="txtScrolling" Text="Scrolling text thingy" Margin="440,176,152,0" Width="1328" Height="32" VerticalAlignment="Top" Visibility="Hidden">
            <TextBlock.RenderTransform>
              <TranslateTransform x:Name="translate" />
                </TextBlock.RenderTransform>
                  <TextBlock.Triggers>
                    <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation
                                    From="1100" To="0"
                                    Storyboard.TargetName="translate"
                                    Storyboard.TargetProperty="X"
                                    Duration="0:0:9" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </TextBlock.Triggers>
        </TextBlock>
        <!--<Image Margin="283.493,22,0,0" Source="Resources/CCF-logo2_200.png" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="200"/>-->

        <!--Home button/logo-->
        <Button Height="Auto" Width="200" Margin="-800.493,-700,0,0" Click="Home_Click">
            <Button.Template>
                <ControlTemplate>
                    <Image Source="Resources/CCF-logo2_200.png"/>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!--Back button-->
        <s:SurfaceButton
                Margin="195.693,59,0,0" Padding="0"
                BorderThickness="0"
                Click="Back_Click" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Background="{x:Null}">
            <Image Height="60"
                    Width="60"
                    Source="/Resources/back_button.png">
                <Image.Effect>
                    <ee:BloomEffect BloomIntensity="2" BaseSaturation="0" BaseIntensity="1" BloomSaturation="2" Threshold="0.25"/>
                </Image.Effect>
            </Image>
        </s:SurfaceButton>
    </Grid>
</Page>
